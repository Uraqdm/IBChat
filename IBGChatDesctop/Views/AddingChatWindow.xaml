<Window x:Class="IBGChatDesctop.Views.AddingChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBGChatDesctop.Views" xmlns:vm="clr-namespace:IBGChatDesctop.ViewModels"
        mc:Ignorable="d"
        Title="AddingChatWindow" Height="200" Width="450" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.DataContext>
        <vm:AddingChatWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter chat name" Margin="5" Style="{StaticResource Header}"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="5"/>
            <Button Content="Submit" Margin="15,25" Command="{Binding Submit}"/>
        </StackPanel>
    </Grid>
</Window>
