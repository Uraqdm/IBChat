<Window x:Class="IBGChatDesctop.Views.JoiningInChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IBGChatDesctop.Views" xmlns:vm="clr-namespace:IBGChatDesctop.ViewModels"
        mc:Ignorable="d"
        Title="JoiningInChatWindow" Height="450" Width="800">

    <Window.DataContext>
        <vm:JoiningChatWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter chat guid" Margin="5"/>
            <TextBox Text="{Binding ChatGuid, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="5"/>
            <Button Content="Submit" Command="{Binding Submit}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
